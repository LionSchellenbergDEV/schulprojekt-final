<link rel="stylesheet" href="/style.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
<title>Suchergebnis</title>
</head>
<body style="background-color:#141414;">
<nav>
    <h3>Schulprojekt</h3>
    <div id="searchbar-wrapper">
        <form action="/search" method="GET">
            <input type="text" placeholder="Nutzername..." name="username">
            <input type="submit" value="suchen">
        </form>
    </div>
    <ul>
        <li><a href="/">Startseite</a></li>
        <li><a href="/profile">Profil</a></li>
    </ul>
</nav>
<main class="container mx-auto p-2">
    <h1>Suchergebnis</h1>

    <% if (error) { %>
        <p style="color: red;"><%= error %></p>
    <% } %>

        <% users.forEach(user => { %>
            <div class="card" style="width: 18rem; background-color: #262626; color: white; cursor:context-menu;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= user.username %></h5>
                    <p class="card-text">Position: <%= user.position %></p>
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">Zum Kampf herausfordern</button>
                </div>
            </div>
        <% }); %>
</main>

<footer>
    <ul>
        <li><a href="/datenschutzerklaerung">Datenschutzerklärung</a></li>
        <li><a href="/datenschutzerklaerung#cookieRichtlinien">Cookie Richtlinien</a></li>
    </ul>
</footer>



<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Kampfmodus wählen</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Möchtest du <strong><%=users[0].username%></strong> zu einem Einzel- oder Gruppenkampf herausfordern?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success">Einzelkampf</button>
                <button type="button" class="btn btn-warning">Gruppenkampf</button>
            </div>
        </div>
    </div>
</div>
</div>
</body>
</html>